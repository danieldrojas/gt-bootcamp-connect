<div class="container">
    <div class="row" id="categoryRow">
        <div class="col s12">
            <button class="waves-effect waves-light btn catBtn" id="generalBtn">General</button>
            <button class="waves-effect waves-light btn catBtn" id="jobsBtn">Jobs</button>
            <button class="waves-effect waves-light btn catBtn" id="collaborateBtn">Collaborate</button>
            <button class="waves-effect waves-light btn catBtn right" id="newPost"><a href="/post" id="newPost" class="noBlue">New Post</a></button>
        </div>
    </div>
    {{!-- </br> --}}
    {{#each posts}}
    <div class="row">
        <div class="col s10 offset-s1">
            <h4>{{firstName}} {{lastName}}</h4>
            <div class="postContainer">
                <div class="row">
                    <div class="col s12 m6">
                        <div class="card">
                            <div class="card-content">
                                <span>
                                <h6>{{title}} </h6>
                                <p> {{body}} </p>

                                </span>
                              <p class="right align-right" id="timeStamp">
                                    <small> Posted: {{createdAt}}</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each }}
</div>

<script src="/js/dashboard.js" type="text/javascript"></script>
<script>
    $("#profileLink").on("click", () =>{
        window.location.replace("/profile/"+sessionStorage.getItem("currentUser"))
    })
</script>
